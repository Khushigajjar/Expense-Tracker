<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="expensetracker.expensetracker.DashboardController" stylesheets="@style.css">

    <top>
        <VBox spacing="5">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Expense Tracker" styleClass="header-label"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="welcomeLabel" text="Hello!" style="-fx-font-size: 14px;"/>
                <Button text="Update Income" onAction="#onUpdateIncome" styleClass="btn-income"/>
                <Button text="+ Add Expense" onAction="#onAddExpense" styleClass="btn-add"/>
                <Button text="Logout" onAction="#onLogout" styleClass="btn-logout"/>
            </HBox>
            <Separator/>
        </VBox>
    </top>

    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <HBox spacing="15" prefHeight="400">
                <PieChart fx:id="categoryPieChart" title="Spending Breakdown" HBox.hgrow="ALWAYS" />
                <BarChart fx:id="incomeExpenseBarChart" title="Income vs Expenses" HBox.hgrow="ALWAYS">
                    <xAxis><CategoryAxis label="Type" /></xAxis>
                    <yAxis><NumberAxis label="Amount (€)" /></yAxis>
                </BarChart>
            </HBox>

            <TableView fx:id="expenseTable" VBox.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                    <TableColumn fx:id="categoryColumn" text="Category" prefWidth="150"/>
                    <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100"/>
                    <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="500"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="30" alignment="CENTER" style="-fx-background-color: #f4f4f4; -fx-border-color: #cccccc; -fx-border-width: 1 0 0 0;">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>

            <Label fx:id="incomeLabel" text="Income: €0.00" styleClass="summary-label, income-text"/>
            <Label fx:id="totalLabel" text="Expense: €0.00" styleClass="summary-label, expense-text"/>
            <Label fx:id="balanceLabel" text="Balance: €0.00" styleClass="summary-label, balance-text"/>
        </HBox>
    </bottom>

</BorderPane>