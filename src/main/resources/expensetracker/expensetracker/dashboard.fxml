<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="expensetracker.expensetracker.DashboardController">

    <!-- Top bar -->
    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Expense Tracker Dashboard" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Add Expense" onAction="#onAddExpense"/>
        </HBox>
    </top>

    <!-- Center table -->
    <center>
        <TableView fx:id="expenseTable" prefHeight="400" prefWidth="600">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                <TableColumn fx:id="categoryColumn" text="Category" prefWidth="150"/>
                <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100"/>
                <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="250"/>
            </columns>
        </TableView>
    </center>

    <!-- Bottom total -->
    <bottom>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Total Expenses: "/>
            <Label fx:id="totalLabel" text="0.0"/>
        </HBox>
    </bottom>

</BorderPane>
