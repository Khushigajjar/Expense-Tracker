<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox spacing="10"
      xmlns="http://javafx.com/javafx/21.0.6"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="expensetracker.expensetracker.AddExpenseController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Add New Expense" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <HBox spacing="10">
        <Label text="Category:" prefWidth="100"/>
        <TextField fx:id="categoryField" promptText="Enter category"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Amount:" prefWidth="100"/>
        <TextField fx:id="amountField" promptText="Enter amount"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Date:" prefWidth="100"/>
        <DatePicker fx:id="datePicker"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Description:" prefWidth="100"/>
        <TextField fx:id="descriptionField" promptText="Enter description"/>
    </HBox>

    <Button fx:id="saveButton" text="Save Expense" onAction="#onSaveExpense" prefWidth="200"/>
</VBox>